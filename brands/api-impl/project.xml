<?xml version="1.0" encoding="UTF-8"?>

<project>
   <pomVersion>3</pomVersion>
   <extend>../../master/project.xml</extend>
   <id>brands-api-impl</id>
   <groupId>mesa</groupId>
   <name>Brands Service Implementation</name>
   <currentVersion>${mesa.rsmart.version}</currentVersion>
   <organization>
       <name>The rSmart Group</name>
       <url>http://www.rsmart.com/</url>
   </organization>
   <inceptionYear>2002</inceptionYear>

   <properties>
      <deploy.type>jar</deploy.type>
   </properties>

   <dependencies>
      <dependency>
         <groupId>sakaiproject</groupId>
         <version>${sakai.version}</version>
         <artifactId>sakai-util-api</artifactId>
      </dependency>
      <dependency>
         <groupId>commons-logging</groupId>
         <artifactId>commons-logging</artifactId>
         <version>1.0.4</version>
      </dependency>
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-session</artifactId>
			<version>${sakai.version}</version>
		</dependency>
      <dependency>
			<groupId>servletapi</groupId>
			<artifactId>servletapi</artifactId>
			<version>2.4-20040521</version>
		</dependency>
      <dependency>
        <groupId>sakaiproject</groupId>
        <artifactId>sakai-session</artifactId>
        <version>${sakai.version}</version>
      </dependency>
      <dependency>
        <groupId>springframework</groupId>
        <artifactId>spring-core</artifactId>
        <version>${sakai.spring.version}</version>
      </dependency>
      <dependency>
        <groupId>mesa</groupId>
        <artifactId>brands-api</artifactId>
        <version>${mesa.rsmart.version}</version>
      </dependency>
		<dependency>
			<groupId>servletapi</groupId>
			<artifactId>servletapi</artifactId>
			<version>2.4-20040521</version>
		</dependency>
   </dependencies>

   <build>
      <!-- java source -->
      <sourceDirectory>src/java</sourceDirectory>

      <resources>
         <resource>
            <directory>src/bundle</directory>
            <includes>
                <include>**/*.properties</include>
                <include>**/*.xml</include>
            </includes>
         </resource>
         <resource>
            <directory>src/resources</directory>
            <includes>
               <include>**/*</include>
            </includes>
         </resource>
         <resource>
            <directory>src/java</directory>
            <includes>
               <include>**/*.hbm.xml</include>
            </includes>
         </resource>
      </resources>
   </build>
</project>
