<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans default-autowire="no" default-dependency-check="none" default-lazy-init="false">

   <bean abstract="false" autowire="default" class="com.rsmart.sakai.sql.SqlExecuter" dependency-check="default" id="com.rsmart.sakai.sql.SqlExecuter.osp" init-method="init" lazy-init="default" scope="singleton">
      <property name="autoDdl" value="${auto.ddl}"/>
      <property name="sqlService" ref="org.sakaiproject.db.api.SqlService"/>
       <property name="scriptName">
<value>sakai_osp_post_schemaupdate</value>
</property>
   </bean>

   <bean abstract="false" autowire="default" class="com.rsmart.sakai.osp.StartupResetManagerImpl" dependency-check="default" id="org.theospi.portfolio.admin.intf.StartupResetManager" init-method="init" lazy-init="default" scope="singleton">
      <property name="eventTrackingService">
         <ref bean="org.sakaiproject.event.api.EventTrackingService"/>
      </property>
      <property name="sqlService">
         <ref bean="org.sakaiproject.db.api.SqlService"/>
      </property>
      <property name="dependancies">
         <list>
           <ref bean="com.rsmart.sakai.sql.SqlExecuter.osp"/>    
         </list>
      </property>
   </bean>
   
   <bean abstract="false" autowire="default" class="org.sakaiproject.springframework.orm.hibernate.impl.AdditionalHibernateMappingsImpl" dependency-check="default" id="org.sakaiproject.springframework.orm.hibernate.AdditionalHibernateMappings.rsmartOspCommon" lazy-init="default" scope="singleton">
      <property name="mappingResources">
         <list>
            <value>com/rsmart/sakai/security/model/rsmart-osp-common.hbm.xml</value>
         </list>
      </property>
      <property name="sortOrder">
         <value>1</value>
      </property>
   </bean>

   <bean abstract="false" autowire="default" class="com.rsmart.sakai.security.impl.PermissionInjectorServiceImpl" dependency-check="default" id="com.rsmart.sakai.security.intf.PermissionInjectorService" lazy-init="default" scope="singleton">
      <property name="sessionFactory">
         <ref bean="org.sakaiproject.springframework.orm.hibernate.GlobalSessionFactory"/>
      </property>
   </bean>
   
</beans>
