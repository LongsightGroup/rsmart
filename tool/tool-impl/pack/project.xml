<?xml version="1.0" encoding="UTF-8"?>

<project>
	<pomVersion>3</pomVersion>
	<extend>../../../../master/project.xml</extend>
	<name>rsmart-tool-pack</name>
	<groupId>rSmart</groupId>
	<id>rsmart-tool-pack</id>
	<currentVersion>${sakai.version}</currentVersion>
   <organization>
     <name>rSmart</name>
     <url>http://rsmart.com/</url>
   </organization>
	<inceptionYear>2003</inceptionYear>

	<properties>
		<!-- deploy as a components -->
		<deploy.type>components</deploy.type>
	</properties>

	<dependencies>

      <dependency>
         <groupId>rSmart</groupId>
         <artifactId>rsmart-tool-impl</artifactId>
         <version>${sakai.version}</version>
         <properties>
            <war.bundle>true</war.bundle>
         </properties>
      </dependency>

      <dependency>
         <groupId>sakaiproject</groupId>
         <artifactId>sakai-tool-impl</artifactId>
         <version>${sakai.version}</version>
         <properties>
            <war.bundle>true</war.bundle>
         </properties>
      </dependency>

      <dependency>
         <groupId>sakaiproject</groupId>
         <artifactId>sakai-tool-util</artifactId>
         <version>${sakai.version}</version>
         <properties>
            <war.bundle>true</war.bundle>
         </properties>
      </dependency>

      <dependency>
         <groupId>sakaiproject</groupId>
         <artifactId>sakai-util</artifactId>
         <version>${sakai.version}</version>
         <properties>
            <war.bundle>true</war.bundle>
         </properties>
      </dependency>

      <dependency>
         <groupId>concurrent</groupId>
         <artifactId>concurrent</artifactId>
         <version>1.3.4</version>
         <properties>
            <war.bundle>true</war.bundle>
         </properties>
      </dependency>

	</dependencies>

	<build>

		<!-- java source -->
		<sourceDirectory>src/java</sourceDirectory>

	</build>

</project>
